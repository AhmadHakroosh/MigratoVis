{
	// Unused and undefined strictness
	"undef": true,
	"unused": true,

	// Strict equality
	"eqeqeq": true,

	// Maximum errors before stop building
	"maxerr": 10,

	// Enabled browser global variables such as window, document etc.
	"browser": true,

	// Enable development mode
	"devel": true,

	// Enable node mode
	"node": true,

	// Suppress warnings about the use of assignments in cases where comparisons are expected
	"boss": true,

	// Suppress warnings about == null comparisons
	"eqnull": true,
	
	// Prohibit variables to be used before definition
	"latedef": true,
	
	// Prohibit arguments.caller and argument.callee
	"noarg": true,

	// Require curly braces
	"curly": true
}